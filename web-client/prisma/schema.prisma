generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  fullName      String
  email         String        @unique
  passwordHash  String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  destinations  Destination[]
  streams       Stream[]
}

model Destination {
  id           String   @id @default(cuid())
  nickname     String
  platform     String   // "facebook", "youtube"
  
  // OAuth Fields (New)
  accessToken  String?  @db.Text
  refreshToken String?  @db.Text
  expiresAt    DateTime?
  
  // We still store these, but we fetch them automatically now
  rtmpUrl      String?
  streamKey    String?
  
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
}

model Stream {
  id          String   @id @default(cuid())
  title       String
  sourceUrl   String
  status      String   @default("IDLE")
  duration    Int?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
